<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tangibledesign.pintu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden"
            android:name="com.tangibledesign.pintu.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden"
            android:name="com.tangibledesign.pintu.EasyActivity"
            android:label="@string/title_activity_easy"
            android:parentActivityName="com.tangibledesign.pintu.EasyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tangibledesign.pintu.EasyActivity" />
        </activity>
        <activity
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden"
            android:name="com.tangibledesign.pintu.TimerActivity"
            android:label="@string/title_timer_activity"
            android:parentActivityName="com.tangibledesign.pintu.TimerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tangibledesign.pintu.TimerActivity" />
        </activity>
    </application>

</manifest>
