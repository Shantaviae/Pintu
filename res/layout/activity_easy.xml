<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCCCCC"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tangibledesign.pintu.EasyActivity" >
 
<LinearLayout
    android:id="@+id/radical_layout1"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
    <ImageView 
    android:id="@+id/radical1"
    style="@style/RadicalImages"
    android:contentDescription="@string/radicals"
    android:src="@drawable/door" />

 <ImageView
    android:id="@+id/radical2"
    style="@style/RadicalImages"
    android:contentDescription="@string/radicals"
    android:src="@drawable/fire" />
 
    <ImageView
    android:id="@+id/radical3"
    style="@style/RadicalImages"
    android:contentDescription="@string/radicals"
    android:src="@drawable/mountain" />
    
 <ImageView
    android:id="@+id/radical4"
    style="@style/RadicalImages"
    android:contentDescription="@string/radicals"
    android:src="@drawable/mouth" />

    
</LinearLayout>

<LinearLayout
    android:id="@+id/radical_layout2"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >
        
    <ImageView
    android:id="@+id/radical5"
    style="@style/RadicalImages"
    android:contentDescription="@string/radicals"
    android:src="@drawable/person" />

 <ImageView
    android:id="@+id/radical6"
    style="@style/RadicalImages"
    android:contentDescription="@string/radicals"
    android:src="@drawable/sun" />
    
    <ImageView
    android:id="@+id/radical7"
    style="@style/RadicalImages"
    android:contentDescription="@string/radicals"
    android:src="@drawable/water" />
    
 <ImageView
    android:id="@+id/radical8"
    style="@style/RadicalImages"
    android:contentDescription="@string/radicals"
    android:src="@drawable/woman" />
    
</LinearLayout>


<com.tangibledesign.pintu.DrawingView
    android:id="@+id/drawing"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:layout_weight="1"
    android:background="#FFFFFFFF" />

<LinearLayout
    android:id="@+id/game_options_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >
 
    <RelativeLayout
        android:id="@+id/timerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <TextView 
	    android:id="@+id/timerTitle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/timerTitle" />
        
	    <TextView 
	    android:id="@+id/timer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/timerTitle" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/scoreLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <TextView 
	    android:id="@+id/scoreTitle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/scoreTitle" />
        
	    <TextView 
	    android:id="@+id/score"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/scoreTitle" />
    </RelativeLayout>
    
    <LinearLayout
    android:id="@+id/btn_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal" >
    
	    <Button
	    android:id="@+id/new_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    style="?android:attr/buttonStyleSmall"
	    android:color="#000000"
	    android:text="@string/icon_erase"
	    android:onClick="clearScreen" />

	    <Button
	    android:id="@+id/submit_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    style="?android:attr/buttonStyleSmall"
	    android:color="#000000"
	    android:text="@string/icon_save"
	    android:onClick="submitEntry" />
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultsTitle">
        
    </TextView>
    
    <LinearLayout
    android:id="@+id/resultsLayout"
    android:layout_width="100dp" 
    android:layout_height="130dp"
    android:background="@drawable/customborder"
    android:orientation="horizontal"
    android:gravity="center">
	    
        
        
    </LinearLayout>
    
</LinearLayout>

</LinearLayout>

