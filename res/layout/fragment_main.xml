<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.tangibledesign.pintu.MainActivity$PlaceholderFragment" >

    <!--
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    -->


    <!--
    android:layout_marginLeft="15dp"
	android:layout_marginRight="15dp"
    -->

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@color/coral">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tagline"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/pintulogo4" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textSize="50sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonPlay"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:onClick="startGame"
        android:text="@string/play"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonScores"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round2"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:onClick="showScores"
        android:text="@string/scores"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonInstruct"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round3"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:onClick="howTo"
        android:text="@string/instruct"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</LinearLayout>
